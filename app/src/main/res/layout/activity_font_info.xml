<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.lrapps.android.ui.ActivityAbout">
    <include layout="@layout/layout_title"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="字体预览："
                android:textSize="18sp"/>
            <EditText
                android:id="@+id/et_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/bg_edittext_corner_10"
                android:gravity="top|left"
                android:hint="在此输入要预览的文字"
                android:minLines="3"
                android:padding="5dp"
                android:textSize="14dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_h"
                android:background="@color/line"/>
            <TextView
                android:id="@+id/tv_font_size12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/font_preview_content"
                android:textColor="@android:color/background_dark"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/tv_font_size16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/font_preview_content"
                android:textColor="@android:color/background_dark"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/tv_font_size20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/font_preview_content"
                android:textColor="@android:color/background_dark"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/tv_font_size24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/font_preview_content"
                android:textColor="@android:color/background_dark"
                android:textSize="24sp"/>
            <TextView
                android:id="@+id/tv_font_size28"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/font_preview_content"
                android:textColor="@android:color/background_dark"
                android:textSize="28sp"/>
        </LinearLayout>
    </ScrollView>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_h"
        android:layout_gravity="bottom"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="@color/line"/>
    <Button
        android:id="@+id/btn_set"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:text="设为系统字体"
        android:textSize="18sp"/>
</LinearLayout>
